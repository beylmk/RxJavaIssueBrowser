<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/issue_row_height"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:background="?android:attr/selectableItemBackground">

    <TextView
            android:id="@+id/issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="issue title"/>

    <TextView
            android:id="@+id/issue_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="@integer/max_length_issue_body"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/issue_title"
            tools:text="issue body, a really long issue containing asdfasdfasdfasdfasdfasdfasdfasdfasdflots of text, definitely more than 140 characters. this person was probably angry blahblahblahblahblahblahblah"/>

</android.support.constraint.ConstraintLayout>